<!-- Images -->

<mj-class name="image" padding="18px 0" />

<mj-class name="image--50pc" padding="18px 32px" />

<!-- Hero (banner) -->

<mj-class
  name="hero"
  mode="fixed-height"
  background-color="grey"
  vertical-align="middle"
/>

<mj-class
  name="hero__title"
  align="center"
  font-size="48px"
  font-weight="bold"
  color="white"
/>

<mj-class
  name="hero-border"
  container-background-color="white"
  border-color="{{design.colors.primary}}"
  border-width="2px"
/>

<!-- Social media links -->

<mj-class
  name="component-social"
  padding="32px 0 16px"
  background-color="white"
/>

<mj-class
  name="social__border-top"
  padding-top="{{design.sections.social.topBorder.verticalPadding}}"
  padding-bottom="{{design.sections.social.topBorder.verticalPadding}}"
  border-width="{{design.sections.social.topBorder.borderWidth}}"
  border-style="{{design.sections.social.topBorder.borderStyle}}"
  border-color="{{design.colors.primary}}"
/>

<mj-class
  name="social__nav"
  mode="horizontal"
  icon-size="48px"
  font-size="16px"
/>

<mj-class
  name="social__icon"
  padding="16px"
  background-color="{{design.colors.primary}}"
  border-radius="6px"
/>

<!-- Navigation menus -->

<mj-class
  name="nav"
  padding="16px"
  background-color="{{design.colors.primary}}"
  color="white"
/>

<mj-class name="nav--top" />

<mj-class name="nav--bottom" />

<mj-class name="nav__logo" padding="16px" width="75px" height="24px" />

<mj-class name="nav__navbar" hamburger="hamburger" ico-color="white" />

<mj-class name="nav__navbar--top" padding="16px 0" />

<mj-class name="nav__navbar--bottom" padding="4px 0" />

<mj-class
  name="nav__link"
  padding="0 16px"
  font-size="16px"
  font-weight="bold"
  color="white"
/>
